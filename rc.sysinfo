if [ "$PS1" ] && [ -z "${IS_NOLOGINSHELL}" ]; then
    if hash bsdinfo 2>/dev/null; then
        bsdinfo
    elif hash archey 2>/dev/null; then
        archey
    elif hash screenfetch 2>/dev/null; then
        screenfetch 2> /dev/null
    fi
fi

